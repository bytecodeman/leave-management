@model leave_management.Models.CreateLeaveAllocationVM

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<p>
    Number Updated: @Model.NumberUpdated
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Leave Types
            </th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.LeaveTypes) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @*@Html.ActionLink("Allocate To Employees", "SetLeave", "LeaveAllocation", new {  id=item.Id, name="silvestri" })*@
                <a class="btn btn-outline-success" asp-action="SetLeave" asp-route-id="@item.Id">
                    <i class="fa fa-pencil"></i> Allocate to Employees
                </a>
            </td>
        </tr>
}
    </tbody>
</table>
